{
  "$schema": "https://schemas.wp.org/trunk/block.json",
  "apiVersion": 3,
  "name": "mermaid-blocks/diagram",
  "version": "0.1.0",
  "title": "Mermaid Diagram",
  "category": "widgets",
  "icon": "chart-bar",
  "description": "Add MermaidJS diagrams to your WordPress posts and pages. Supports flowcharts, Gantt charts, sequence diagrams, and more.",
  "supports": {
    "html": false
  },
  "attributes": {
    "code": {
      "type": "string"
    }
  },
  "textdomain": "mermaid-blocks",
  "editorScript": [
    "mermaid-js",
    "file:./index.js"
  ],
  "editorStyle": "file:./index.css",
  "style": "file:./style-index.css",
  "viewScript": [
    "mermaid-js",
    "file:./view.js"
  ]
}